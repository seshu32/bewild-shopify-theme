{% comment %}
  BeWild Sustainability Section - Simplified Version
  Basic sustainability section with BeWild branding
{% endcomment %}

<div class="sustainability-section" id="sustainability-{{ section.id }}">
  <div class="container">
    <div class="section-header">
      <h2 class="section-heading">
        {{ section.settings.section_heading | default: "Sustainability & Organic Farming" }}
      </h2>
      <p class="section-tagline">
        {{ section.settings.section_tagline | default: "Grown with Care, Rooted in Sustainability" }}
      </p>
    </div>
    
    <div class="sustainability-content">
      <div class="content-text">
        <p class="sustainability-description">
          {{ section.settings.description | default: "At BeWild, we are deeply committed to preserving the environment while ensuring you get the most nutritious, flavorful, and ethically sourced products. Our farming practices prioritize sustainability, biodiversity, and fair trade, ensuring that every grain, spice, and fresh produce is cultivated with care." }}
        </p>
        
        <div class="sustainability-features">
          <div class="feature-item">
            <div class="feature-icon">üå±</div>
            <div class="feature-content">
              <h3 class="feature-title">{{ section.settings.feature_1 | default: "100% Organic & Chemical-Free" }}</h3>
              <p class="feature-description">Pure, natural ingredients without harmful chemicals or pesticides</p>
            </div>
          </div>
          
          <div class="feature-item">
            <div class="feature-icon">ü§ù</div>
            <div class="feature-content">
              <h3 class="feature-title">{{ section.settings.feature_2 | default: "Supporting Local Farmers & Communities" }}</h3>
              <p class="feature-description">Empowering local farming communities through fair trade practices</p>
            </div>
          </div>
          
          <div class="feature-item">
            <div class="feature-icon">‚úÖ</div>
            <div class="feature-content">
              <h3 class="feature-title">{{ section.settings.feature_3 | default: "Transparent Sourcing & Ethical Farming" }}</h3>
              <p class="feature-description">Complete transparency in our supply chain and ethical farming methods</p>
            </div>
          </div>
        </div>
        
        <div class="sustainability-cta">
          <a href="{{ section.settings.cta_link | default: '/pages/contact' }}" class="btn-sustainability">
            {{ section.settings.cta_text | default: "Learn More About Our Practices" }}
          </a>
        </div>
      </div>
      
      {% if section.settings.sustainability_image %}
        <div class="sustainability-image">
          <img src="{{ section.settings.sustainability_image | image_url: width: 600 }}" 
               alt="{{ section.settings.sustainability_image.alt | default: 'Sustainable Farming Practices' }}"
               loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .sustainability-section {
    padding: 100px 0;
    background: linear-gradient(135deg, #f0f8f4 0%, #e8f5e8 100%);
    position: relative;
  }
  
  .container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }
  
  .section-heading {
    font-family: 'Montserrat', sans-serif;
    font-size: 3.5rem;
    font-weight: 700;
    color: #2e7d32;
    margin-bottom: 20px;
    line-height: 1.2;
  }
  
  .section-tagline {
    font-family: 'Dancing Script', cursive;
    font-size: 1.5rem;
    color: #4caf50;
    font-weight: 400;
  }
  
  .sustainability-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }
  
  .sustainability-description {
    font-family: 'Open Sans', sans-serif;
    font-size: 1.2rem;
    line-height: 1.8;
    color: #2e7d32;
    margin-bottom: 40px;
    padding: 30px;
    background: rgba(255, 255, 255, 0.7);
    border-radius: 15px;
    border-left: 5px solid #4caf50;
  }
  
  .sustainability-features {
    margin-bottom: 40px;
  }
  
  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 20px;
    margin-bottom: 30px;
    padding: 20px;
    background: rgba(255, 255, 255, 0.5);
    border-radius: 12px;
    transition: all 0.3s ease;
  }
  
  .feature-item:hover {
    background: rgba(255, 255, 255, 0.8);
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(76, 175, 80, 0.2);
  }
  
  .feature-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
  }
  
  .feature-title {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.3rem;
    font-weight: 600;
    color: #2e7d32;
    margin-bottom: 8px;
  }
  
  .feature-description {
    font-family: 'Open Sans', sans-serif;
    font-size: 1rem;
    line-height: 1.6;
    color: #4caf50;
  }
  
  .btn-sustainability {
    display: inline-block;
    padding: 18px 35px;
    background: linear-gradient(135deg, #4caf50, #66bb6a);
    color: white;
    text-decoration: none;
    font-family: 'Montserrat', sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    text-transform: uppercase;
    border-radius: 8px;
    transition: all 0.3s ease;
    letter-spacing: 1px;
    box-shadow: 0 5px 15px rgba(76, 175, 80, 0.3);
  }
  
  .btn-sustainability:hover {
    background: linear-gradient(135deg, #66bb6a, #4caf50);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(76, 175, 80, 0.4);
    color: white;
    text-decoration: none;
  }
  
  .sustainability-image img {
    width: 100%;
    height: auto;
    border-radius: 15px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .sustainability-section {
      padding: 80px 0;
    }
    
    .sustainability-content {
      grid-template-columns: 1fr;
      gap: 60px;
    }
    
    .section-heading {
      font-size: 2.5rem;
    }
    
    .section-tagline {
      font-size: 1.3rem;
    }
    
    .feature-item {
      flex-direction: column;
      text-align: center;
      gap: 15px;
    }
    
    .sustainability-description {
      font-size: 1.1rem;
      padding: 20px;
    }
  }
  
  @media (max-width: 480px) {
    .section-heading {
      font-size: 2rem;
    }
    
    .section-tagline {
      font-size: 1.2rem;
    }
    
    .sustainability-description {
      font-size: 1rem;
      padding: 15px;
    }
    
    .feature-title {
      font-size: 1.2rem;
    }
    
    .btn-sustainability {
      padding: 15px 25px;
      font-size: 1rem;
    }
  }
</style>

