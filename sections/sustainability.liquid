<style>
  .sustainability-section {
    padding: 100px 0;
    background: linear-gradient(135deg, #f0f8f4 0%, #e8f5e8 50%, #f0f8f4 100%);
    position: relative;
    overflow: hidden;
  }
  
  /* Background decorative elements */
  .bg-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }
  
  .floating-leaf {
    position: absolute;
    font-size: 2rem;
    animation: float 6s ease-in-out infinite;
    opacity: 0.3;
  }
  
  .leaf-1 {
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }
  
  .leaf-2 {
    top: 20%;
    right: 15%;
    animation-delay: 2s;
  }
  
  .leaf-3 {
    bottom: 20%;
    left: 20%;
    animation-delay: 4s;
  }
  
  .floating-circle {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(45deg, #7cb342, #4caf50);
    animation: float 8s ease-in-out infinite;
    opacity: 0.1;
  }
  
  .circle-1 {
    width: 120px;
    height: 120px;
    top: 15%;
    right: 10%;
    animation-delay: 1s;
  }
  
  .circle-2 {
    width: 80px;
    height: 80px;
    bottom: 15%;
    right: 25%;
    animation-delay: 3s;
  }
  
  .circle-3 {
    width: 60px;
    height: 60px;
    top: 50%;
    left: 5%;
    animation-delay: 5s;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(5deg); }
  }
  
  .container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }
  
  /* Header Styling */
  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }
  
  .header-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin-bottom: 20px;
  }
  
  .decoration-line {
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, transparent, #4caf50, transparent);
  }
  
  .decoration-icon {
    font-size: 2rem;
    animation: pulse 2s ease-in-out infinite;
  }
  
  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }
  
  .section-heading {
    font-size: 3.2rem;
    font-weight: 700;
    background: linear-gradient(135deg, #2e7d32, #4caf50, #66bb6a);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
    margin-bottom: 1rem;
    font-family: 'Montserrat', sans-serif;
  }
  
  .section-tagline {
    font-size: 1.4rem;
    color: #5d4037;
    font-weight: 500;
    font-style: italic;
    position: relative;
  }
  
  /* Content Layout */
  .sustainability-content {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 80px;
    align-items: start;
  }
  
  /* Description */
  .description-wrapper {
    position: relative;
    margin-bottom: 50px;
  }
  
  .quote-decoration {
    position: absolute;
    top: -20px;
    left: -30px;
    font-size: 4rem;
    color: #4caf50;
    opacity: 0.3;
    font-family: serif;
  }
  
  .sustainability-description {
    font-size: 1.2rem;
    line-height: 1.8;
    color: #3e2723;
    padding: 30px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 20px;
    border-left: 5px solid #4caf50;
    box-shadow: 0 10px 30px rgba(76, 175, 80, 0.1);
    position: relative;
  }
  
  /* Features */
  .sustainability-features {
    margin-bottom: 50px;
  }
  
  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 25px;
    margin-bottom: 30px;
    padding: 25px;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 20px;
    box-shadow: 0 8px 25px rgba(76, 175, 80, 0.15);
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
  }
  
  .feature-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(180deg, #4caf50, #81c784);
    transition: width 0.4s ease;
  }
  
  .feature-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(76, 175, 80, 0.25);
  }
  
  .feature-item:hover::before {
    width: 100%;
    opacity: 0.1;
  }
  
  .feature-icon-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .feature-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #4caf50, #66bb6a);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    position: relative;
    z-index: 2;
    box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
  }
  
  .feature-icon svg {
    width: 28px;
    height: 28px;
  }
  
  .feature-pulse {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 60px;
    border: 2px solid #4caf50;
    border-radius: 50%;
    animation: pulse-ring 2s ease-out infinite;
  }
  
  @keyframes pulse-ring {
    0% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 1;
    }
    100% {
      transform: translate(-50%, -50%) scale(1.5);
      opacity: 0;
    }
  }
  
  .feature-content {
    flex: 1;
  }
  
  .feature-title {
    font-size: 1.3rem;
    font-weight: 700;
    color: #2e7d32;
    margin-bottom: 8px;
    line-height: 1.3;
  }
  
  .feature-description {
    font-size: 1rem;
    color: #5d4037;
    line-height: 1.6;
    margin: 0;
  }
  
  /* CTA Button */
  .sustainability-cta {
    text-align: center;
  }
  
  .btn-sustainability {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 18px 35px;
    background: linear-gradient(135deg, #4caf50, #66bb6a);
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.4s ease;
    box-shadow: 0 8px 25px rgba(76, 175, 80, 0.3);
    position: relative;
    overflow: hidden;
  }
  
  .btn-sustainability::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: left 0.6s ease;
  }
  
  .btn-sustainability:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 35px rgba(76, 175, 80, 0.4);
    color: white;
    text-decoration: none;
  }
  
  .btn-sustainability:hover::before {
    left: 100%;
  }
  
  .btn-icon {
    font-size: 1.2rem;
    animation: bounce 2s ease-in-out infinite;
  }
  
  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-3px); }
  }
  
  /* Visual Content */
  .visual-content {
    position: relative;
  }
  
  .sustainability-image {
    position: relative;
    border-radius: 25px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(76, 175, 80, 0.2);
  }
  
  .sustainability-image img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.4s ease;
  }
  
  .sustainability-image:hover img {
    transform: scale(1.05);
  }
  
  .image-overlay {
    position: absolute;
    bottom: 20px;
    left: 20px;
    right: 20px;
    display: flex;
    gap: 15px;
  }
  
  .overlay-stat {
    background: rgba(255, 255, 255, 0.95);
    padding: 12px 18px;
    border-radius: 15px;
    text-align: center;
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }
  
  .stat-number {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: #4caf50;
  }
  
  .stat-label {
    display: block;
    font-size: 0.9rem;
    color: #5d4037;
    font-weight: 500;
  }
  
  /* Sustainability Graphic (fallback when no image) */
  .sustainability-graphic {
    position: relative;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .graphic-center {
    position: relative;
    width: 200px;
    height: 200px;
  }
  
  .earth-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 4rem;
    animation: rotate 20s linear infinite;
  }
  
  @keyframes rotate {
    from { transform: translate(-50%, -50%) rotate(0deg); }
    to { transform: translate(-50%, -50%) rotate(360deg); }
  }
  
  .orbit-ring {
    position: absolute;
    border: 2px dashed #4caf50;
    border-radius: 50%;
    opacity: 0.3;
  }
  
  .ring-1 {
    width: 120px;
    height: 120px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation: orbit 15s linear infinite;
  }
  
  .ring-2 {
    width: 160px;
    height: 160px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation: orbit 20s linear infinite reverse;
  }
  
  .ring-3 {
    width: 200px;
    height: 200px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation: orbit 25s linear infinite;
  }
  
  @keyframes orbit {
    from { transform: translate(-50%, -50%) rotate(0deg); }
    to { transform: translate(-50%, -50%) rotate(360deg); }
  }
  
  .orbit-element {
    position: absolute;
    font-size: 1.5rem;
    background: white;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(76, 175, 80, 0.2);
  }
  
  .element-1 { top: -20px; left: 50%; transform: translateX(-50%); }
  .element-2 { top: -20px; left: 50%; transform: translateX(-50%); }
  .element-3 { bottom: -20px; left: 50%; transform: translateX(-50%); }
  .element-4 { top: -20px; left: 50%; transform: translateX(-50%); }
  .element-5 { right: -20px; top: 50%; transform: translateY(-50%); }
  .element-6 { left: -20px; top: 50%; transform: translateY(-50%); }
  
  .graphic-stats {
    position: absolute;
    width: 100%;
    height: 100%;
  }
  
  .stat-bubble {
    position: absolute;
    background: linear-gradient(135deg, #4caf50, #66bb6a);
    color: white;
    padding: 15px;
    border-radius: 20px;
    text-align: center;
    box-shadow: 0 8px 25px rgba(76, 175, 80, 0.3);
    animation: float 6s ease-in-out infinite;
  }
  
  .stat-1 {
    top: 20px;
    right: 20px;
    animation-delay: 0s;
  }
  
  .stat-2 {
    bottom: 20px;
    left: 20px;
    animation-delay: 2s;
  }
  
  .stat-3 {
    top: 50%;
    right: -20px;
    transform: translateY(-50%);
    animation-delay: 4s;
  }
  
  .bubble-number {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
  }
  
  .bubble-label {
    display: block;
    font-size: 0.8rem;
    opacity: 0.9;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .sustainability-section {
      padding: 80px 0;
    }
    
    .sustainability-content {
      grid-template-columns: 1fr;
      gap: 60px;
    }
    
    .section-heading {
      font-size: 2.5rem;
    }
    
    .section-header {
      margin-bottom: 60px;
    }
    
    .feature-item {
      flex-direction: column;
      text-align: center;
      gap: 20px;
    }
    
    .quote-decoration {
      display: none;
    }
    
    .floating-leaf,
    .floating-circle {
      display: none;
    }
  }
  
  @media (max-width: 480px) {
    .section-heading {
      font-size: 2rem;
    }
    
    .section-tagline {
      font-size: 1.2rem;
    }
    
    .sustainability-description {
      font-size: 1.1rem;
      padding: 20px;
    }
    
    .feature-title {
      font-size: 1.2rem;
    }
    
    .btn-sustainability {
      padding: 15px 25px;
      font-size: 1rem;
    }
    
    .graphic-center {
      width: 150px;
      height: 150px;
    }
    
    .earth-icon {
      font-size: 3rem;
    }
  }
</style>

