{% comment %}
  BeWild Sustainability Section - Minimal Version
  Basic sustainability section using same structure as hero-banner
{% endcomment %}

<div class="sustainability-section" id="sustainability-{{ section.id }}">
  <div class="sustainability-container">
    <div class="sustainability-content">
      <div class="sustainability-text">
        {% if section.settings.title != blank %}
          <h2 class="sustainability-title">{{ section.settings.title }}</h2>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <p class="sustainability-description">{{ section.settings.description }}</p>
        {% endif %}
        
        {% if section.settings.button_text != blank and section.settings.button_url != blank %}
          <div class="sustainability-cta">
            <a href="{{ section.settings.button_url }}" class="sustainability-button">
              {{ section.settings.button_text }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .sustainability-section {
    padding: 100px 0;
    background: linear-gradient(135deg, #f0f8f4 0%, #e8f5e8 100%);
    position: relative;
  }
  
  .sustainability-container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .sustainability-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }
  
  .sustainability-title {
    font-family: 'Montserrat', sans-serif;
    font-size: 48px;
    font-weight: 700;
    color: #2e7d32;
    line-height: 1.2;
    margin-bottom: 30px;
  }
  
  .sustainability-description {
    font-family: 'Open Sans', sans-serif;
    font-size: 18px;
    line-height: 1.6;
    color: #4caf50;
    margin-bottom: 40px;
  }
  
  .sustainability-button {
    display: inline-block;
    padding: 18px 35px;
    background-color: #4caf50;
    color: white;
    text-decoration: none;
    font-family: 'Montserrat', sans-serif;
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    border-radius: 8px;
    transition: all 0.3s ease;
    letter-spacing: 1px;
  }
  
  .sustainability-button:hover {
    background-color: #66bb6a;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(76, 175, 80, 0.3);
    color: white;
    text-decoration: none;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .sustainability-section {
      padding: 80px 0;
    }
    
    .sustainability-title {
      font-size: 36px;
    }
    
    .sustainability-description {
      font-size: 16px;
    }
  }
  
  @media (max-width: 480px) {
    .sustainability-title {
      font-size: 28px;
    }
    
    .sustainability-description {
      font-size: 14px;
    }
    
    .sustainability-button {
      padding: 15px 25px;
      font-size: 14px;
    }
  }
</style>

{% schema %}
{
  "name": "Sustainability",
  "tag": "section",
  "class": "sustainability-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Sustainability & Organic Farming"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "At BeWild, we are committed to preserving the environment while ensuring you get the most nutritious, flavorful, and ethically sourced products."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "LEARN MORE"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/pages/about"
    }
  ],
  "presets": [
    {
      "name": "Sustainability"
    }
  ]
}
{% endschema %} 