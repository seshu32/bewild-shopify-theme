<style>
  .product-showcase-section {
    padding: 100px 0;
    background-color: white;
  }
  
  .container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .section-heading {
    font-size: 3rem;
    font-weight: 700;
    color: #342e29; /* Assertive dark brown */
    line-height: 1.3;
    margin-bottom: 1rem;
    font-family: system-ui, -apple-system, sans-serif;
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
  }
  
  .product-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 8px 25px rgba(52, 46, 41, 0.1);
    transition: all 0.4s ease;
    position: relative;
    border: 2px solid transparent;
  }
  
  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(52, 46, 41, 0.2);
    border-color: #b8dc99; /* Approachable green */
  }
  
  .product-badge {
    position: absolute;
    top: 15px;
    right: 15px;
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    z-index: 10;
  }
  
  .sale-badge {
    background-color: #ff774a; /* Approachable orange */
    color: white;
  }
  
  .hot-badge {
    background-color: #86312b; /* Assertive red-brown */
    color: white;
  }
  
  .new-badge {
    background-color: #344736; /* Assertive green */
    color: white;
  }
  
  .product-image {
    text-align: center;
    margin-bottom: 1.5rem;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f8f6f4;
    border-radius: 8px;
  }
  
  .product-image img {
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }
  
  .placeholder-image {
    font-size: 4rem;
    opacity: 0.6;
  }
  
  .product-info {
    text-align: center;
  }
  
  .product-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: #342e29; /* Assertive dark brown */
    margin-bottom: 1rem;
    line-height: 1.4;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .product-pricing {
    margin-bottom: 1.5rem;
  }
  
  .sale-price {
    font-size: 1.3rem;
    font-weight: 700;
    color: #86312b; /* Assertive red-brown */
  }
  
  .regular-price {
    font-size: 1rem;
    color: #999;
    text-decoration: line-through;
    margin-left: 0.5rem;
  }
  
  .add-to-cart-btn {
    background-color: #344736; /* Assertive green */
    color: white;
    border: none;
    padding: 0.8rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
  }
  
  .add-to-cart-btn:hover {
    background-color: #415c43; /* Authentic green */
    transform: translateY(-2px);
  }
  
  /* Animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .product-card:nth-child(1) { animation: fadeInUp 0.6s ease 0.1s both; }
  .product-card:nth-child(2) { animation: fadeInUp 0.6s ease 0.2s both; }
  .product-card:nth-child(3) { animation: fadeInUp 0.6s ease 0.3s both; }
  .product-card:nth-child(4) { animation: fadeInUp 0.6s ease 0.4s both; }
  .product-card:nth-child(5) { animation: fadeInUp 0.6s ease 0.5s both; }
  .product-card:nth-child(6) { animation: fadeInUp 0.6s ease 0.6s both; }
  .product-card:nth-child(7) { animation: fadeInUp 0.6s ease 0.7s both; }
  .product-card:nth-child(8) { animation: fadeInUp 0.6s ease 0.8s both; }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .product-showcase-section {
      padding: 80px 0;
    }
    
    .products-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }
    
    .section-heading {
      font-size: 2.5rem;
    }
    
    .product-card {
      padding: 1.2rem;
    }
    
    .product-image {
      height: 180px;
    }
  }
  
  @media (max-width: 480px) {
    .section-heading {
      font-size: 2rem;
    }
    
    .products-grid {
      grid-template-columns: 1fr;
    }
    
    .product-card {
      padding: 1rem;
    }
    
    .product-image {
      height: 150px;
    }
  }
</style>

