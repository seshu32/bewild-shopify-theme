{% comment %}
  BeWild Hero Banner Section
  Replicating the Oars template structure with BeWild brand identity
{% endcomment %}

<div class="hero-banner" id="hero-{{ section.id }}">
  <div class="hero-content">
    <div class="container">
      <div class="hero-text">
        <h1 class="hero-heading">
          {{ section.settings.hero_heading | default: "Bringing Nature to Your Table" }}
        </h1>
        
        <div class="hero-tagline">
          <span class="tagline-organic">Organic</span>
          <span class="tagline-separator">|</span>
          <span class="tagline-sustainable">Sustainable</span>
          <span class="tagline-separator">|</span>
          <span class="tagline-fresh">Farm-Fresh</span>
        </div>
        
        <p class="hero-subtext">
          {{ section.settings.hero_subtext | default: "Discover the goodness of nature with our responsibly sourced, eco-friendly, and chemical-free products. From single-origin coffee to wholesome grains and spices, we bring you farm-fresh produce straight to your doorstep." }}
        </p>
        
        <div class="hero-cta">
          <a href="{{ section.settings.cta_link | default: '/collections/all' }}" class="btn btn-primary">
            {{ section.settings.cta_text | default: "Shop Now" }}
          </a>
        </div>
      </div>
      
      {% if section.settings.hero_image %}
        <div class="hero-image">
          <img src="{{ section.settings.hero_image | img_url: '1200x800' }}" 
               alt="{{ section.settings.hero_image.alt | default: 'BeWild Organic Products' }}"
               loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .hero-banner {
    background: linear-gradient(135deg, #ffcf83 0%, #b8dc99 100%); /* Approachable colors gradient */
    min-height: 70vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }
  
  .hero-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(52, 46, 41, 0.1); /* Subtle assertive overlay */
    z-index: 1;
  }
  
  .hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
  }
  
  .container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }
  
  .hero-heading {
    font-size: 3.5rem;
    font-weight: 700;
    color: #342e29; /* Assertive dark brown */
    line-height: 1.2;
    margin-bottom: 1.5rem;
    font-family: system-ui, -apple-system, sans-serif;
  }
  
  .hero-tagline {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
    font-weight: 500;
    font-size: 1.2rem;
  }
  
  .tagline-organic {
    color: #344736; /* Assertive green */
  }
  
  .tagline-sustainable {
    color: #86312b; /* Assertive red-brown */
  }
  
  .tagline-fresh {
    color: #002140; /* Assertive navy */
  }
  
  .tagline-separator {
    color: #4b3c35; /* Authentic brown */
  }
  
  .hero-subtext {
    font-size: 1.2rem;
    line-height: 1.6;
    color: #4b3c35; /* Authentic brown */
    margin-bottom: 2.5rem;
    max-width: 90%;
  }
  
  .btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    font-size: 1.1rem;
    transition: all 0.4s ease-in-out;
    border: none;
    cursor: pointer;
  }
  
  .btn-primary {
    background-color: #86312b; /* Assertive red-brown */
    color: white;
  }
  
  .btn-primary:hover {
    background-color: #9e3430; /* Authentic red on hover */
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(134, 49, 43, 0.3);
  }
  
  .hero-image img {
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(52, 46, 41, 0.2);
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .container {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }
    
    .hero-heading {
      font-size: 2.5rem;
    }
    
    .hero-subtext {
      max-width: 100%;
    }
    
    .hero-tagline {
      justify-content: center;
    }
  }
  
  @media (max-width: 480px) {
    .hero-heading {
      font-size: 2rem;
    }
    
    .hero-subtext {
      font-size: 1.1rem;
    }
    
    .btn {
      padding: 0.8rem 2rem;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "hero_heading",
      "label": "Hero Heading",
      "default": "Bringing Nature to Your Table"
    },
    {
      "type": "textarea",
      "id": "hero_subtext",
      "label": "Hero Subtext",
      "default": "Discover the goodness of nature with our responsibly sourced, eco-friendly, and chemical-free products. From single-origin coffee to wholesome grains and spices, we bring you farm-fresh produce straight to your doorstep."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %} 