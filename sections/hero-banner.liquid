{% comment %}
  BeWild Hero Banner Section - Simple Version
  Basic hero banner to test and resolve Liquid errors
{% endcomment %}

<div class="hero-banner-section" id="hero-{{ section.id }}">
  <div class="hero-container">
    <div class="hero-content">
      <div class="hero-text">
        {% if section.settings.subtitle != blank %}
          <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
        
        {% if section.settings.title != blank %}
          <h1 class="hero-title">{{ section.settings.title }}</h1>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <p class="hero-description">{{ section.settings.description }}</p>
        {% endif %}
        
        {% if section.settings.button_text != blank and section.settings.button_url != blank %}
          <div class="hero-cta">
            <a href="{{ section.settings.button_url }}" class="hero-button">
              {{ section.settings.button_text }}
            </a>
          </div>
        {% endif %}
      </div>
      
      {% if section.settings.hero_image %}
        <div class="hero-image">
          <img src="{{ section.settings.hero_image | image_url: width: 800 }}" 
               alt="{{ section.settings.hero_image.alt | default: 'BeWild Hero Image' }}"
               loading="eager">
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .hero-banner-section {
    padding: 100px 0;
    background: linear-gradient(135deg, #b8dc99 0%, #ffcf83 100%);
    position: relative;
    overflow: hidden;
  }
  
  .hero-container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    min-height: 500px;
  }
  
  .hero-text {
    text-align: left;
  }
  
  .hero-subtitle {
    font-family: 'Dancing Script', cursive;
    font-size: 24px;
    color: #4b3c35;
    margin-bottom: 10px;
    font-weight: 400;
  }
  
  .hero-title {
    font-family: 'Montserrat', sans-serif;
    font-size: 56px;
    font-weight: 700;
    color: #344736;
    line-height: 1.1;
    margin-bottom: 20px;
  }
  
  .hero-description {
    font-family: 'Open Sans', sans-serif;
    font-size: 18px;
    line-height: 1.6;
    color: #342e29;
    margin-bottom: 30px;
    max-width: 500px;
  }
  
  .hero-button {
    display: inline-block;
    padding: 18px 35px;
    background-color: #86312b;
    color: white;
    text-decoration: none;
    font-family: 'Montserrat', sans-serif;
    font-size: 16px;
    font-weight: 600;
    text-transform: uppercase;
    border-radius: 8px;
    transition: all 0.3s ease;
    letter-spacing: 1px;
  }
  
  .hero-button:hover {
    background-color: #9e3430;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(134, 49, 43, 0.3);
    color: white;
    text-decoration: none;
  }
  
  .hero-image img {
    width: 100%;
    height: auto;
    border-radius: 15px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-banner-section {
      padding: 80px 0;
    }
    
    .hero-content {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }
    
    .hero-title {
      font-size: 36px;
    }
    
    .hero-subtitle {
      font-size: 20px;
    }
    
    .hero-description {
      font-size: 16px;
    }
  }
  
  @media (max-width: 480px) {
    .hero-title {
      font-size: 28px;
    }
    
    .hero-subtitle {
      font-size: 18px;
    }
    
    .hero-description {
      font-size: 14px;
    }
    
    .hero-button {
      padding: 15px 25px;
      font-size: 14px;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-section",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "We introduction"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "BeWild Organic"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover the pure essence of nature with our carefully curated collection of organic products, sourced directly from sustainable farms and wild harvesting practices."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %} 