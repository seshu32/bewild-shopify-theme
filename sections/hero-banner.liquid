{% comment %}
  BeWild Hero Banner Section
  Replicating the exact Oars template hero design with BeWild brand identity
{% endcomment %}

<div class="hero-banner" id="hero-{{ section.id }}">
  <!-- Floating Background Elements -->
  <div class="floating-elements">
    <div class="floating-bar bar-1"></div>
    <div class="floating-bar bar-2"></div>
    <div class="floating-bar bar-3"></div>
    <div class="floating-bar bar-4"></div>
    <div class="floating-bar bar-5"></div>
    <div class="floating-bar bar-6"></div>
    <div class="floating-bar bar-7"></div>
    <div class="floating-bar bar-8"></div>
    <div class="floating-bar bar-9"></div>
    <div class="floating-bar bar-10"></div>
    <div class="floating-bar bar-11"></div>
    <div class="floating-bar bar-12"></div>
  </div>
  
  <!-- Floating Organic Elements -->
  <div class="organic-elements">
    <div class="floating-element element-1">ü•ë</div>
    <div class="floating-element element-2">ü•ù</div>
    <div class="floating-element element-3">üçã</div>
    <div class="floating-element element-4">üåø</div>
    <div class="floating-element element-5">ü´ê</div>
    <div class="floating-element element-6">ü•¨</div>
    <div class="floating-element element-7">üå±</div>
  </div>
  
  <div class="container">
    <div class="hero-content">
      
      <!-- Hero Image/Product -->
      <div class="hero-image-section">
        {% if section.settings.hero_image %}
          <div class="hero-product-image">
            <img src="{{ section.settings.hero_image | img_url: '600x600' }}" 
                 alt="{{ section.settings.hero_image.alt | default: 'BeWild Organic Smoothie' }}"
                 loading="lazy">
          </div>
        {% else %}
          <div class="hero-product-placeholder">
            <div class="smoothie-glass">
              <div class="smoothie-liquid"></div>
              <div class="smoothie-foam"></div>
              <div class="glass-highlight"></div>
            </div>
          </div>
        {% endif %}
        
        <!-- Product Tag -->
        <div class="product-tag">
          <div class="product-info">
            <span class="product-name">{{ section.settings.product_name | default: "Organic Green Smoothie" }}</span>
            <span class="product-price">${{ section.settings.product_price | default: "12.99" }}</span>
          </div>
          <button class="close-tag">√ó</button>
        </div>
      </div>
      
      <!-- Hero Text Content -->
      <div class="hero-text-section">
        <div class="hero-intro">
          {{ section.settings.hero_intro | default: "We introduce" }}
        </div>
        
        <h1 class="hero-main-title">
          {{ section.settings.hero_title | default: "BeWild Organic" }}
        </h1>
        
        <p class="hero-description">
          {{ section.settings.hero_description | default: "Discover the pure essence of nature with our carefully curated collection of organic products. From farm-fresh smoothies to heritage grains, we bring you the finest sustainable nutrition." }}
        </p>
        
        <div class="hero-cta">
          <a href="{{ section.settings.cta_link | default: '/collections/all' }}" class="shop-now-btn">
            {{ section.settings.cta_text | default: "SHOP NOW" }}
          </a>
        </div>
      </div>
      
    </div>
  </div>
</div>

<style>
  .hero-banner {
    background: linear-gradient(135deg, #b8dc99 0%, #a8cc89 25%, #98bc79 50%, #88ac69 75%, #78a659 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding: 0;
  }
  
  /* Floating Background Bars */
  .floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .floating-bar {
    position: absolute;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 10px;
    animation: floatAnimation 6s ease-in-out infinite;
  }
  
  .bar-1 {
    width: 120px;
    height: 10px;
    top: 10%;
    left: 35%;
    animation-delay: 0s;
    opacity: 0.9;
  }
  
  .bar-2 {
    width: 80px;
    height: 10px;
    top: 15%;
    left: 25%;
    animation-delay: 1s;
    opacity: 0.7;
  }
  
  .bar-3 {
    width: 160px;
    height: 10px;
    top: 22%;
    left: 45%;
    animation-delay: 2s;
    opacity: 0.8;
  }
  
  .bar-4 {
    width: 70px;
    height: 10px;
    top: 28%;
    left: 20%;
    animation-delay: 3s;
    opacity: 0.6;
  }
  
  .bar-5 {
    width: 140px;
    height: 10px;
    top: 35%;
    left: 40%;
    animation-delay: 4s;
    opacity: 0.9;
  }
  
  .bar-6 {
    width: 100px;
    height: 10px;
    top: 42%;
    left: 30%;
    animation-delay: 5s;
    opacity: 0.7;
  }
  
  .bar-7 {
    width: 90px;
    height: 10px;
    top: 50%;
    left: 50%;
    animation-delay: 2.5s;
    opacity: 0.8;
  }
  
  .bar-8 {
    width: 60px;
    height: 10px;
    top: 58%;
    left: 35%;
    animation-delay: 1.5s;
    opacity: 0.6;
  }
  
  .bar-9 {
    width: 110px;
    height: 10px;
    top: 65%;
    left: 45%;
    animation-delay: 3.5s;
    opacity: 0.8;
  }
  
  .bar-10 {
    width: 75px;
    height: 10px;
    top: 72%;
    left: 25%;
    animation-delay: 4.5s;
    opacity: 0.7;
  }
  
  .bar-11 {
    width: 130px;
    height: 10px;
    top: 80%;
    left: 40%;
    animation-delay: 0.5s;
    opacity: 0.6;
  }
  
  .bar-12 {
    width: 85px;
    height: 10px;
    top: 88%;
    left: 30%;
    animation-delay: 2.8s;
    opacity: 0.8;
  }
  
  /* Floating Organic Elements */
  .organic-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }
  
  .floating-element {
    position: absolute;
    font-size: 2.5rem;
    animation: organicFloat 8s ease-in-out infinite;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
  }
  
  .element-1 { /* Avocado */
    top: 20%;
    left: 12%;
    animation-delay: 0s;
    font-size: 3rem;
  }
  
  .element-2 { /* Kiwi */
    bottom: 20%;
    right: 15%;
    animation-delay: 2s;
    font-size: 2.8rem;
  }
  
  .element-3 { /* Lime */
    top: 15%;
    right: 8%;
    animation-delay: 4s;
    font-size: 2.5rem;
  }
  
  .element-4 { /* Leaves */
    bottom: 35%;
    left: 8%;
    animation-delay: 1s;
    font-size: 2.2rem;
  }
  
  .element-5 { /* Blueberries */
    bottom: 8%;
    right: 30%;
    animation-delay: 3s;
    font-size: 2rem;
  }
  
  .element-6 { /* Lettuce */
    top: 45%;
    left: 5%;
    animation-delay: 5s;
    font-size: 2.3rem;
  }
  
  .element-7 { /* Sprout */
    top: 35%;
    right: 5%;
    animation-delay: 6s;
    font-size: 2rem;
  }
  
  .container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 10;
  }
  
  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    min-height: 85vh;
    padding: 2rem 0;
  }
  
  /* Hero Image Section */
  .hero-image-section {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .hero-product-image img {
    max-width: 500px;
    height: auto;
    filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.3));
  }
  
  .hero-product-placeholder {
    position: relative;
    width: 400px;
    height: 500px;
  }
  
  .smoothie-glass {
    width: 300px;
    height: 450px;
    background: linear-gradient(180deg, 
      rgba(255, 255, 255, 0.2) 0%, 
      rgba(255, 255, 255, 0.1) 100%);
    border: 3px solid rgba(255, 255, 255, 0.4);
    border-radius: 8px 8px 15px 15px;
    position: relative;
    margin: 0 auto;
    backdrop-filter: blur(10px);
    filter: drop-shadow(0 30px 60px rgba(0, 0, 0, 0.3));
    overflow: hidden;
  }
  
  /* Mason jar lid/top */
  .smoothie-glass::before {
    content: '';
    position: absolute;
    top: -5px;
    left: -5px;
    right: -5px;
    height: 25px;
    background: linear-gradient(180deg, #86312b 0%, #4b3c35 100%);
    border-radius: 10px 10px 0 0;
    z-index: 5;
  }
  
  /* Rope/twine around jar */
  .smoothie-glass::after {
    content: '';
    position: absolute;
    top: 20px;
    left: -8px;
    right: -8px;
    height: 40px;
    background: repeating-linear-gradient(
      90deg,
      #ffcf83 0px,
      #ff774a 3px,
      #ffcf83 6px
    );
    border-radius: 50%;
    transform: rotate(5deg);
    z-index: 6;
  }
  
  .smoothie-liquid {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 75%;
    background: linear-gradient(180deg, 
      #b8dc99 0%,
      #88ac69 25%,
      #78a659 50%,
      #68964a 75%,
      #58863a 100%);
    border-radius: 5px 5px 12px 12px;
    box-shadow: inset 0 15px 30px rgba(0, 0, 0, 0.1);
  }
  
  .smoothie-foam {
    position: absolute;
    top: 22%;
    left: 10%;
    right: 10%;
    height: 6%;
    background: rgba(255, 255, 255, 0.85);
    border-radius: 50%;
    filter: blur(1.5px);
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
  }
  
  .glass-highlight {
    position: absolute;
    top: 25%;
    left: 20%;
    width: 20%;
    height: 45%;
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.5) 0%, 
      rgba(255, 255, 255, 0.2) 50%,
      transparent 100%);
    border-radius: 10px;
    filter: blur(1px);
  }
  
  /* Product Tag */
  .product-tag {
    position: absolute;
    top: 25%;
    right: -60px;
    background: white;
    padding: 1.2rem 1.8rem;
    border-radius: 18px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
    display: flex;
    align-items: center;
    gap: 1.2rem;
    min-width: 220px;
    z-index: 10;
  }
  
  .product-info {
    display: flex;
    flex-direction: column;
  }
  
  .product-name {
    font-weight: 600;
    color: #342e29; /* Assertive dark brown from brand palette */
    font-size: 0.9rem;
  }
  
  .product-price {
    color: #86312b; /* Assertive red-brown from brand palette */
    font-weight: 700;
    font-size: 1.1rem;
  }
  
  .close-tag {
    background: none;
    border: none;
    font-size: 1.2rem;
    color: #999;
    cursor: pointer;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Hero Text Section */
  .hero-text-section {
    padding-left: 1.5rem;
    padding-right: 1rem;
  }
  
  .hero-intro {
    font-size: 1.6rem;
    color: #4b3c35; /* Authentic color from brand palette */
    font-style: italic;
    margin-bottom: 0.8rem;
    font-family: Georgia, serif;
    font-weight: 400;
  }
  
  .hero-main-title {
    font-size: 4.8rem;
    font-weight: 800;
    color: #344736; /* Assertive green from brand palette */
    line-height: 0.95;
    margin-bottom: 1.8rem;
    font-family: system-ui, -apple-system, sans-serif;
    letter-spacing: -0.02em;
  }
  
  .hero-description {
    font-size: 1.05rem;
    color: #342e29; /* Assertive dark brown from brand palette */
    line-height: 1.65;
    margin-bottom: 2.8rem;
    max-width: 480px;
    font-weight: 400;
  }
  
  .shop-now-btn {
    background: #86312b; /* Assertive red-brown from brand palette */
    color: white;
    padding: 1.1rem 2.8rem;
    text-decoration: none;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.8px;
    transition: all 0.3s ease;
    display: inline-block;
    box-shadow: 0 4px 15px rgba(134, 49, 43, 0.3);
  }
  
  .shop-now-btn:hover {
    background: #9e3430; /* Authentic red from brand palette */
    transform: translateY(-3px);
    box-shadow: 0 12px 30px rgba(158, 52, 48, 0.5);
  }
  
  /* Animations */
  @keyframes floatAnimation {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(2deg); }
  }
  
  @keyframes organicFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-15px) rotate(5deg); }
    66% { transform: translateY(-10px) rotate(-3deg); }
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .hero-content {
      gap: 2rem;
    }
    
    .hero-main-title {
      font-size: 3.5rem;
    }
    
    .product-tag {
      right: -30px;
    }
  }
  
  @media (max-width: 768px) {
    .hero-content {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }
    
    .hero-image-section {
      order: 2;
    }
    
    .hero-text-section {
      order: 1;
      padding-left: 0;
    }
    
    .hero-main-title {
      font-size: 3rem;
    }
    
    .hero-intro {
      font-size: 1.4rem;
    }
    
    .product-tag {
      position: static;
      margin: 2rem auto 0;
      justify-content: center;
    }
    
    .smoothie-glass {
      width: 250px;
      height: 375px;
    }
    
    .floating-element {
      font-size: 2rem;
    }
  }
  
  @media (max-width: 480px) {
    .hero-main-title {
      font-size: 2.5rem;
    }
    
    .hero-intro {
      font-size: 1.2rem;
    }
    
    .hero-description {
      font-size: 1rem;
    }
    
    .hero-banner {
      min-height: 90vh;
    }
    
    .smoothie-glass {
      width: 200px;
      height: 300px;
    }
    
    .floating-element {
      font-size: 1.5rem;
    }
    
    .floating-bar {
      display: none; /* Hide bars on very small screens */
    }
  }
</style>

