      "label": "Hero Description",
      "default": "Discover the pure essence of nature with our carefully curated collection of organic products. From farm-fresh smoothies to heritage grains, we bring you the finest sustainable nutrition."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Product Showcase"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Product Image",
      "info": "Upload a product image or leave blank to show the default smoothie glass"
    },
    {
      "type": "text",
      "id": "product_name",
      "label": "Product Tag Name",
      "default": "Organic Green Smoothie"
    },
    {
      "type": "text",
      "id": "product_price",
      "label": "Product Tag Price",
      "default": "12.99"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %} 