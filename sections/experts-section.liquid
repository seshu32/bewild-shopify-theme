<style>
  .experts-section {
    padding: 100px 0;
    background: linear-gradient(135deg, #b8dc99 0%, #b0ddf1 50%, #ffcf83 100%);
  }
  
  .container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }
  
  .section-heading {
    font-size: 3rem;
    font-weight: 700;
    color: #342e29;
    line-height: 1.3;
    margin-bottom: 1.5rem;
  }
  
  .section-description {
    font-size: 1.4rem;
    color: #86312b;
    font-weight: 500;
  }
  
  .experts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 50px;
  }
  
  .expert-card {
    background: white;
    border-radius: 25px;
    padding: 0;
    box-shadow: 0 20px 50px rgba(52, 46, 41, 0.15);
    transition: all 0.4s ease;
    overflow: hidden;
  }
  
  .expert-card:hover {
    transform: translateY(-15px);
    box-shadow: 0 30px 70px rgba(52, 46, 41, 0.25);
  }
  
  .expert-placeholder {
    height: 250px;
    background: linear-gradient(135deg, #f8f6f4, #ffcf83);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .expert-icon {
    font-size: 6rem;
    opacity: 0.6;
  }
  
  .expert-content {
    padding: 2.5rem;
  }
  
  .expert-name {
    font-size: 1.8rem;
    font-weight: 700;
    color: #342e29;
    margin-bottom: 0.5rem;
  }
  
  .expert-title {
    font-size: 1.1rem;
    color: #86312b;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }
  
  .expert-bio {
    font-size: 1rem;
    line-height: 1.6;
    color: #4b3c35;
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .experts-section {
      padding: 80px 0;
    }
    
    .experts-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
    
    .section-heading {
      font-size: 2.5rem;
    }
  }
</style>

