{% comment %}
  BeWild Sustainability & Organic Farming Section
  Section 2 from BeWild Website Copy
{% endcomment %}

<div class="sustainability-section" id="sustainability-{{ section.id }}">
  <div class="container">
    <div class="section-header">
      <h2 class="section-heading">
        {{ section.settings.section_heading | default: "Sustainability & Organic Farming" }}
      </h2>
      <p class="section-tagline">
        {{ section.settings.section_tagline | default: "Grown with Care, Rooted in Sustainability" }}
      </p>
    </div>
    
    <div class="sustainability-content">
      <div class="content-text">
        <p class="sustainability-description">
          {{ section.settings.description | default: "At BeWild, we are deeply committed to preserving the environment while ensuring you get the most nutritious, flavorful, and ethically sourced products. Our farming practices prioritize sustainability, biodiversity, and fair trade, ensuring that every grain, spice, and fresh produce is cultivated with care." }}
        </p>
        
        <div class="sustainability-features">
          <div class="feature-item">
            <div class="feature-icon">✅</div>
            <span class="feature-text">{{ section.settings.feature_1 | default: "100% Organic & Chemical-Free" }}</span>
          </div>
          
          <div class="feature-item">
            <div class="feature-icon">✅</div>
            <span class="feature-text">{{ section.settings.feature_2 | default: "Supporting Local Farmers & Communities" }}</span>
          </div>
          
          <div class="feature-item">
            <div class="feature-icon">✅</div>
            <span class="feature-text">{{ section.settings.feature_3 | default: "Transparent Sourcing & Ethical Farming" }}</span>
          </div>
        </div>
        
        <div class="sustainability-cta">
          <a href="{{ section.settings.cta_link | default: '/pages/contact' }}" class="btn btn-secondary">
            {{ section.settings.cta_text | default: "Contact us" }}
          </a>
        </div>
      </div>
      
      {% if section.settings.sustainability_image %}
        <div class="sustainability-image">
          <img src="{{ section.settings.sustainability_image | img_url: '800x600' }}" 
               alt="{{ section.settings.sustainability_image.alt | default: 'Sustainable Farming Practices' }}"
               loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .sustainability-section {
    padding: 80px 0;
    background-color: #f8f6f4; /* Light neutral background */
  }
  
  .container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }
  
  .section-heading {
    font-size: 2.8rem;
    font-weight: 700;
    color: #342e29; /* Assertive dark brown */
    line-height: 1.3;
    margin-bottom: 1rem;
    font-family: system-ui, -apple-system, sans-serif;
  }
  
  .section-tagline {
    font-size: 1.3rem;
    color: #86312b; /* Assertive red-brown */
    font-weight: 500;
    font-style: italic;
  }
  
  .sustainability-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }
  
  .sustainability-description {
    font-size: 1.2rem;
    line-height: 1.7;
    color: #4b3c35; /* Authentic brown */
    margin-bottom: 3rem;
  }
  
  .sustainability-features {
    margin-bottom: 3rem;
  }
  
  .feature-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: white;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(52, 46, 41, 0.1);
    transition: transform 0.3s ease;
  }
  
  .feature-item:hover {
    transform: translateY(-2px);
  }
  
  .feature-icon {
    font-size: 1.5rem;
    color: #344736; /* Assertive green */
  }
  
  .feature-text {
    font-size: 1.1rem;
    font-weight: 600;
    color: #342e29; /* Assertive dark brown */
  }
  
  .btn-secondary {
    background-color: #344736; /* Assertive green */
    color: white;
  }
  
  .btn-secondary:hover {
    background-color: #415c43; /* Authentic green on hover */
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(52, 71, 54, 0.3);
  }
  
  .sustainability-image img {
    width: 100%;
    height: auto;
    border-radius: 15px;
    box-shadow: 0 25px 50px rgba(52, 46, 41, 0.2);
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .sustainability-section {
      padding: 60px 0;
    }
    
    .sustainability-content {
      grid-template-columns: 1fr;
      gap: 50px;
    }
    
    .section-heading {
      font-size: 2.2rem;
    }
    
    .section-header {
      margin-bottom: 40px;
    }
    
    .sustainability-description {
      font-size: 1.1rem;
    }
  }
  
  @media (max-width: 480px) {
    .section-heading {
      font-size: 1.8rem;
    }
    
    .section-tagline {
      font-size: 1.1rem;
    }
    
    .feature-item {
      padding: 0.8rem;
    }
    
    .feature-text {
      font-size: 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Sustainability Section",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Sustainability & Organic Farming"
    },
    {
      "type": "text",
      "id": "section_tagline", 
      "label": "Section Tagline",
      "default": "Grown with Care, Rooted in Sustainability"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "At BeWild, we are deeply committed to preserving the environment while ensuring you get the most nutritious, flavorful, and ethically sourced products. Our farming practices prioritize sustainability, biodiversity, and fair trade, ensuring that every grain, spice, and fresh produce is cultivated with care."
    },
    {
      "type": "text",
      "id": "feature_1",
      "label": "Feature 1",
      "default": "100% Organic & Chemical-Free"
    },
    {
      "type": "text",
      "id": "feature_2",
      "label": "Feature 2", 
      "default": "Supporting Local Farmers & Communities"
    },
    {
      "type": "text",
      "id": "feature_3",
      "label": "Feature 3",
      "default": "Transparent Sourcing & Ethical Farming"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Button Text",
      "default": "Contact us"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Button Link"
    },
    {
      "type": "image_picker",
      "id": "sustainability_image",
      "label": "Sustainability Image"
    }
  ],
  "presets": [
    {
      "name": "Sustainability Section"
    }
  ]
}
{% endschema %} 