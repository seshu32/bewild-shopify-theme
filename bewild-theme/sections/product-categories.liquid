<style>
  .product-categories-section {
    padding: 100px 0;
    background: linear-gradient(135deg, #b0ddf1 0%, #ffcf83 100%); /* Approachable colors gradient */
  }
  
  .container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }
  
  .section-heading {
    font-size: 3rem;
    font-weight: 700;
    color: #342e29; /* Assertive dark brown */
    line-height: 1.3;
    margin-bottom: 1rem;
    font-family: system-ui, -apple-system, sans-serif;
  }
  
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 40px;
    margin-bottom: 60px;
  }
  
  .category-card {
    background: white;
    border-radius: 20px;
    padding: 2.5rem;
    box-shadow: 0 15px 40px rgba(52, 46, 41, 0.15);
    transition: all 0.4s ease;
    border: 2px solid transparent;
  }
  
  .category-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 60px rgba(52, 46, 41, 0.25);
    border-color: #b8dc99; /* Approachable green */
  }
  
  .category-icon {
    font-size: 3rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }
  
  .category-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #86312b; /* Assertive red-brown */
    margin-bottom: 1.5rem;
    text-align: center;
    line-height: 1.4;
  }
  
  .product-list {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
  }
  
  .product-list li {
    padding: 0.8rem 0;
    border-bottom: 1px solid #f0f0f0;
    color: #4b3c35; /* Authentic brown */
    font-size: 0.95rem;
    line-height: 1.5;
  }
  
  .product-list li:last-child {
    border-bottom: none;
  }
  
  .product-list li:before {
    content: "üåø";
    margin-right: 0.5rem;
    font-size: 0.9rem;
  }
  
  .category-cta {
    display: inline-block;
    width: 100%;
    text-align: center;
    padding: 1rem 1.5rem;
    background-color: #344736; /* Assertive green */
    color: white;
    text-decoration: none;
    border-radius: 10px;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  
  .category-cta:hover {
    background-color: #415c43; /* Authentic green */
    transform: translateY(-2px);
  }
  
  .section-footer {
    text-align: center;
  }
  
  .btn-primary-large {
    background-color: #86312b; /* Assertive red-brown */
    color: white;
    padding: 1.2rem 3rem;
    font-size: 1.2rem;
    font-weight: 600;
    border-radius: 12px;
    text-decoration: none;
    display: inline-block;
    transition: all 0.4s ease;
  }
  
  .btn-primary-large:hover {
    background-color: #9e3430; /* Authentic red */
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(158, 52, 48, 0.3);
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .product-categories-section {
      padding: 80px 0;
    }
    
    .categories-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    
    .section-heading {
      font-size: 2.5rem;
    }
    
    .section-header {
      margin-bottom: 60px;
    }
    
    .category-card {
      padding: 2rem;
    }
  }
  
  @media (max-width: 480px) {
    .section-heading {
      font-size: 2rem;
    }
    
    .category-title {
      font-size: 1.3rem;
    }
    
    .category-card {
      padding: 1.5rem;
    }
    
    .btn-primary-large {
      padding: 1rem 2rem;
      font-size: 1.1rem;
    }
  }
</style>

