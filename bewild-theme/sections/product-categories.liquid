    },
    {
      "type": "url",
      "id": "spices_link",
      "label": "Spices Collection Link"
    },
    {
      "type": "url",
      "id": "condiments_link",
      "label": "Condiments Collection Link"
    },
    {
      "type": "url",
      "id": "oils_link",
      "label": "Cooking Oils Collection Link"
    },
    {
      "type": "text",
      "id": "all_products_text",
      "label": "All Products Button Text",
      "default": "View All Products"
    },
    {
      "type": "url",
      "id": "all_products_link",
      "label": "All Products Link"
    }
  ],
  "presets": [
    {
      "name": "Product Categories"
    }
  ]
}
{% endschema %} 