{% comment %}
  BeWild Why Choose Us Section
  Section 6 from BeWild Website Copy - "Farm-to-Home Freshness"
{% endcomment %}

<div class="why-choose-us-section" id="why-choose-{{ section.id }}">
  <div class="container">
    <div class="section-header">
      <h2 class="section-heading">
        {{ section.settings.section_heading | default: "Farm-to-Home Freshness" }}
      </h2>
      <p class="section-tagline">
        {{ section.settings.section_tagline | default: "Pure. Organic. Sustainably Sourced." }}
      </p>
    </div>
    
    <div class="benefits-grid">
      <!-- Always Fresh -->
      <div class="benefit-card">
        <div class="benefit-icon">üå±</div>
        <h3 class="benefit-title">Always Fresh</h3>
        <p class="benefit-description">
          Harvested at peak ripeness, ensuring maximum nutrition and flavor.
        </p>
      </div>
      
      <!-- 100% Organic -->
      <div class="benefit-card">
        <div class="benefit-icon">üè∑Ô∏è</div>
        <h3 class="benefit-title">100% Organic & Chemical-Free</h3>
        <p class="benefit-description">
          No pesticides, no synthetics‚Äîjust pure, natural goodness.
        </p>
      </div>
      
      <!-- Transparency -->
      <div class="benefit-card">
        <div class="benefit-icon">üöú</div>
        <h3 class="benefit-title">Farm-to-Table Transparency</h3>
        <p class="benefit-description">
          Direct sourcing from trusted farmers, ensuring quality and authenticity.
        </p>
      </div>
    </div>
    
    <!-- Farm-to-Table Process Steps -->
    <div class="process-section">
      <h3 class="process-heading">
        {{ section.settings.process_heading | default: "From Farm to Table ‚Äì A Journey of Purity & Sustainability" }}
      </h3>
      
      <div class="process-steps">
        <div class="process-step">
          <div class="step-number">1</div>
          <div class="step-content">
            <h4>Seed Selection</h4>
            <p>Choosing indigenous, heirloom, and non-GMO seeds for purity.</p>
          </div>
        </div>
        
        <div class="process-step">
          <div class="step-number">2</div>
          <div class="step-content">
            <h4>Soil Enrichment</h4>
            <p>Using natural compost, manure, and organic fertilizers for nutrient-rich soil.</p>
          </div>
        </div>
        
        <div class="process-step">
          <div class="step-number">3</div>
          <div class="step-content">
            <h4>Eco-Friendly Cultivation</h4>
            <p>No chemicals, no pesticides‚Äîjust nature working its magic.</p>
          </div>
        </div>
        
        <div class="process-step">
          <div class="step-number">4</div>
          <div class="step-content">
            <h4>Water Conservation</h4>
            <p>Implementing rainwater harvesting, drip irrigation, and mulching to sustain resources.</p>
          </div>
        </div>
        
        <div class="process-step">
          <div class="step-number">5</div>
          <div class="step-content">
            <h4>Hand-Harvesting</h4>
            <p>Picking at peak ripeness to retain maximum nutrition and flavor.</p>
          </div>
        </div>
        
        <div class="process-step">
          <div class="step-number">6</div>
          <div class="step-content">
            <h4>Farm-to-Table Delivery</h4>
            <p>Direct from the source, ensuring freshness and quality.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .why-choose-us-section {
    padding: 100px 0;
    background: linear-gradient(135deg, #f8f6f4 0%, #ffffff 100%);
  }
  
  .container {
    max-width: 1240px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 80px;
  }
  
  .section-heading {
    font-size: 3rem;
    font-weight: 700;
    color: #342e29; /* Assertive dark brown */
    line-height: 1.3;
    margin-bottom: 1rem;
    font-family: system-ui, -apple-system, sans-serif;
  }
  
  .section-tagline {
    font-size: 1.5rem;
    color: #86312b; /* Assertive red-brown */
    font-weight: 600;
    font-style: italic;
  }
  
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 50px;
    margin-bottom: 100px;
  }
  
  .benefit-card {
    background: white;
    border-radius: 20px;
    padding: 3rem;
    text-align: center;
    box-shadow: 0 15px 40px rgba(52, 46, 41, 0.1);
    transition: all 0.4s ease;
    border: 3px solid transparent;
    position: relative;
    overflow: hidden;
  }
  
  .benefit-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(90deg, #ffcf83, #ff774a, #b8dc99);
    transform: scaleX(0);
    transition: transform 0.4s ease;
    transform-origin: center;
  }
  
  .benefit-card:hover::before {
    transform: scaleX(1);
  }
  
  .benefit-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 25px 60px rgba(52, 46, 41, 0.2);
    border-color: #b8dc99; /* Approachable green */
  }
  
  .benefit-icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    display: block;
  }
  
  .benefit-title {
    font-size: 1.6rem;
    font-weight: 700;
    color: #342e29; /* Assertive dark brown */
    margin-bottom: 1rem;
    line-height: 1.3;
  }
  
  .benefit-description {
    font-size: 1.2rem;
    line-height: 1.6;
    color: #4b3c35; /* Authentic brown */
    margin: 0;
  }
  
  .process-section {
    background: white;
    border-radius: 25px;
    padding: 4rem;
    box-shadow: 0 20px 50px rgba(52, 46, 41, 0.1);
  }
  
  .process-heading {
    font-size: 2.2rem;
    font-weight: 700;
    color: #86312b; /* Assertive red-brown */
    text-align: center;
    margin-bottom: 3rem;
    line-height: 1.4;
  }
  
  .process-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 40px;
  }
  
  .process-step {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 1.5rem;
    background: #f8f6f4;
    border-radius: 15px;
    transition: all 0.3s ease;
  }
  
  .process-step:hover {
    background: #ffcf83; /* Approachable cream */
    transform: translateX(5px);
  }
  
  .step-number {
    background: linear-gradient(135deg, #344736, #415c43);
    color: white;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    font-weight: 700;
    flex-shrink: 0;
  }
  
  .step-content h4 {
    font-size: 1.3rem;
    font-weight: 700;
    color: #342e29; /* Assertive dark brown */
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }
  
  .step-content p {
    font-size: 1rem;
    line-height: 1.5;
    color: #4b3c35; /* Authentic brown */
    margin: 0;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .why-choose-us-section {
      padding: 80px 0;
    }
    
    .benefits-grid {
      grid-template-columns: 1fr;
      gap: 40px;
      margin-bottom: 80px;
    }
    
    .section-heading {
      font-size: 2.5rem;
    }
    
    .section-header {
      margin-bottom: 60px;
    }
    
    .benefit-card {
      padding: 2.5rem;
    }
    
    .process-section {
      padding: 3rem 2rem;
    }
    
    .process-steps {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    
    .process-heading {
      font-size: 1.8rem;
    }
  }
  
  @media (max-width: 480px) {
    .section-heading {
      font-size: 2rem;
    }
    
    .section-tagline {
      font-size: 1.3rem;
    }
    
    .benefit-card {
      padding: 2rem;
    }
    
    .benefit-title {
      font-size: 1.4rem;
    }
    
    .benefit-description {
      font-size: 1.1rem;
    }
    
    .process-section {
      padding: 2rem 1.5rem;
    }
    
    .process-heading {
      font-size: 1.6rem;
    }
    
    .process-step {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
    
    .step-number {
      align-self: center;
    }
  }
</style>

{% schema %}
{
  "name": "Why Choose Us",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Farm-to-Home Freshness"
    },
    {
      "type": "text",
      "id": "section_tagline",
      "label": "Section Tagline",
      "default": "Pure. Organic. Sustainably Sourced."
    },
    {
      "type": "text",
      "id": "process_heading",
      "label": "Process Section Heading",
      "default": "From Farm to Table ‚Äì A Journey of Purity & Sustainability"
    }
  ],
  "presets": [
    {
      "name": "Why Choose Us"
    }
  ]
}
{% endschema %} 